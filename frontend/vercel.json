{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://YOUR_RENDER_URL.onrender.com/api/:path*"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}